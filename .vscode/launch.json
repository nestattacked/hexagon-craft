{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "server",
      "program": "${workspaceFolder}/src/server/index.mts",
      "args": [
        "--configuration",
        "../../../asset/config/server/main.json",
        "--map",
        "../../../asset/map/playground.json",
        "--data",
        "../../../asset/data/core.json"
      ],
      "outFiles": ["${workspaceFolder}/build/**/*.mjs"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "helper",
      "program": "${workspaceFolder}/src/helper/index.mts",
      "args": [
        "--configuration",
        "../../../asset/config/helper/main.json",
        "--data",
        "../../../asset/data/core.json"
      ],
      "outFiles": ["${workspaceFolder}/build/**/*.mjs"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "performer",
      "program": "${workspaceFolder}/src/performer/index.mts",
      "args": [
        "--data",
        "../../../asset/data/core.json",
        "--script",
        "../../../asset/script/example.json"
      ],
      "outFiles": ["${workspaceFolder}/build/**/*.mjs"],
      "console": "externalTerminal" 
    }
  ]
}