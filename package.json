{
  "name": "hexagon-craft",
  "version": "0.0.1",
  "scripts": {
    "dev:server": "nodemon --exec ts-node src/server/index.mts --configuration ../../../asset/config/server/main.json --map ../../../asset/map/playground.json --data ../../../asset/data/core.json",
    "dev:client0": "nodemon --exec ts-node src/client/index.mts --configuration ../../../asset/config/client/0.json --data ../../../asset/data/core.json",
    "dev:client1": "nodemon --exec ts-node src/client/index.mts --configuration ../../../asset/config/client/1.json --data ../../../asset/data/core.json",
    "run:server": "yarn build && node build/server/index.mjs --configuration ../../../asset/config/server/main.json --map ../../../asset/map/playground.json --data ../../../asset/data/core.json",
    "run:client0": "yarn build && node build/client/index.mjs --configuration ../../../asset/config/client/0.json --data ../../../asset/data/core.json",
    "run:client1": "yarn build && node build/client/index.mjs --configuration ../../../asset/config/client/1.json --data ../../../asset/data/core.json",
    "lint": "eslint .",
    "predebug": "rimraf build && tsc -p tsconfig.debug.json",
    "build": "rimraf build && tsc -p tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@mojotech/json-type-validation": "^3.1.0"
  }
}
